<!-- Content
	================================================== -->
	<div class="container">

		<!-- Titlebar -->
		<div id="titlebar">
			<div class="row">
				<div class="col-md-12 text-center">
					<h2>Messages</h2>
				</div>
			</div>
		</div>

		<div class="row">
			
			<!-- Listings -->
			<div class="col-lg-12 col-md-12">

				<div class="messages-container margin-top-0">
					<div class="messages-headline">
						<h4>Boîte de réception</h4>
					</div>
					
					<div class="messages-inbox">
<% @conversations.each do |conversation| %>
 
                    <% other = conversation.sender == current_user ? conversation.recipient : conversation.sender %> 
 
                    <%= link_to conversation_messages_path(conversation) do %><!-- revoir les liens -->
						<ul>
							<li class="unread">
								<a href="<%= conversation_messages_path(conversation) %> ">
									<div class="message-avatar"> <%= image_tag avatar_url(other), class: "img-circle avatar-medium" %> </div>

									<div class="message-by">
										<div class="message-by-headline">
											<h5><%= other.fullname %></h5>
											<span><%= timeago_tag conversation.messages.last.created_at, :lang=>:fr %></span>
										</div>
										<p> <%= conversation.messages.last.content %> </p>
									</div>
								</a>
							</li>
						<% end %>
 
               <% end %>
					</div>
				</div>

			</div>

			<!-- Copyrights -->
			<div class="col-md-12">
				<div class="copyrights">© 2017 Listeo. All Rights Reserved.</div>
			</div>
		</div>

	</div>
	<!-- Content / End -->
