<div class="row">
    <div class="col-md-3">
        <%= image_tag avatar_url(@user), class:"avatar-full" %>
        <% if current_user != @user %>
            <div class="row-space-2">
                <%= link_to "Envoyer un message", conversations_path(sender_id: current_user.id,
                recipient_id: @user.id), method: 'post', class:"btn btn-primary wide" %>
            </div>
        <% end %>
        <div class="panel panel-default">
            <div class="panel-heading">Vérification</div>
            <div class="panel-body">
                <% if @user.confirmed_at %>
                    Email confirmé
                <% else %>
                    Email non confirmé
                <% end %>
                
                <br><br>
                Email : <%= @user.email %><br>
                Tél: <%= @user.phone_number %>
                </div>
        </div>
    </div>
    <div class="col-md-9">
        <h2><%= @user.fullname %></h2>
        <div class="description row-space-3">
            <%= @user.description %>
            <br>
            <p>Nombre d'entreprise(s) : <%= @companies.length %></p>
            <br>
            <% @companies.each do |company| %>
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-heading preview">
                            <%= image_tag company.photos[0].image.url(:medium) if company.photos.length > 0 %>
                        </div>
                        <div class="panel-body">
                            <p class="home-link"><b><%= link_to company.listingname, company_path(company) %> - <%= link_to company.category_artisan, company_path(company) %></b></p>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>