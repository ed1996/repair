<div class="panel panel-default">
    <div class="panel-body">
        
        
        <!-- Photo principale de l'entreprise -->
        <div class="row">
            <div class="col-md-12">
                <%= image_tag @photos[0].image.url(), class:"img-responsive" if @photos.length > 0 %>
            </div>
        </div>
        
        <br>
        
        <!-- Informations principales -->
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-3 text-center">
                        <%= image_tag avatar_url(@company.user), class:"img-circle avatar-large" %>
                        <br><br>
                        <%= @company.user.fullname %>
                    </div>
                    <div class="col-md-9">
                        <h4><%= @company.listingname %></h4>
                        <%= @company.address %>
                        <div class="row text-center row-space-1">
                            <div class="col-sm-3">
                                <i class="fa fa-user fa-2x"></i>
                            </div>
                        </div>
                        <div class="row text-center">
                            <div class="col-sm-3">
                                <%= @company.siret %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <!-- Formulaire de reservation de rdv -->
            </div>
        </div>
        
        <!-- Description de l'entreprise -->
        <div class="row">
            <div class="col-md-12">
                <h2>A propos de l'entreprise</h2>
                <p><%= @company.summary %></p>
            </div>
        </div>
        
        <!-- Caroussel -->
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                      <!-- Indicators -->
                      <% if @photos %>
                          <% @photos.each do |photo| %>
                              <ol class="carousel-indicators">
                                <li data-target="#myCarousel" data-slide-to="<%= photo.id %>" class="active"></li>
                              </ol>
                          <% end %>
                      <% end %>
                    
                      <!-- Wrapper for slides -->
                      <div class="carousel-inner">
                        <% if @photos %>
                        <% @photos.each do |photo| %>
                        <div class="item <%= 'active' if photo.id == @photos[0].id %>">
                          <%= image_tag photo.image.url() %>
                        </div>
                        <% end %>
                        <% end %>
                    
                      </div>
                    
                      <!-- Left and right controls -->
                      <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Précédent</span>
                      </a>
                      <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Suivant</span>
                      </a>
                    </div>
            </div>
        </div>
        
    </div>
</div>