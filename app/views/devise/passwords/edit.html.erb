<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <h2>Modification de mon mot de passe</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render 'shared/devise_errors' %>
        <%= f.hidden_field :reset_password_token %>
      
        <div class="form-group">
          <%= f.password_field :password, autofocus: true, autocomplete: "off", class:"form-control", placeholder:"Nouveau mot de passe" %>
        </div>
      
        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder:"Confirmer le mot de passe" %>
        </div>
      
        <div class="actions">
          <%= f.submit "Modification de mon mot de passe", class:"btn btn-primary" %>
        </div>
      <% end %>
      
      <% unless current_user.confirmed_at? %>
        <br><br>
        <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: {
          method: :post }) do |f|
            <%= f.hidden_field :email, value: current_user.email %>
            <div class="actions">
              <%= f.submit "Renvoyer un email de confirmation", class: "btn btn-primary" %>
            </div>
       
        <% end %>
      <% end %>


  </div>
</div>