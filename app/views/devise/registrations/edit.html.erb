




<div class="container"

		<div class="row">

			<!-- Profile -->
			<div class="col-lg-6 col-md-12">
				<div class="dashboard-list-box margin-top-0">
					<h4 class="gray">Profile Details</h4>
					<div class="dashboard-list-box-static">
						<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render 'shared/devise_errors' %>
						<!-- Avatar -->
						<div class="edit-profile-photo">
							<%= image_tag avatar_url(@user), class:"avatar-full" %>
							<div class="change-photo-btn">
								<div class="photoUpload">
								    <span><i class="fa fa-upload"></i> Upload Photo</span>
								    <%= f.file_field :avatar, class:"upload" %>
								</div>
							</div>
						</div>
						<%= link_to 'Voir mon profil', user_path(current_user.id), class: 'btn btn-default wide' %>
	
						<!-- Details -->
						<div class="my-profile">

							<label>Votre nom</label>
							<%= f.text_field :fullname, autofocus: true, class: "form-control", placeholder: "Nom complet (prénom + nom)" %>

							<label>Phone</label>
						  <%= f.text_field :phone_number, class: "form-control", placeholder: "Numéro de téléphone" %>

							<label>Email</label>
							<%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Adresse e-mail" %>

							<label>Notes</label>
							<%= f.text_area :description, rows:10, col:30, class: "form-control", placeholder: "Ma description" %>
							<label><i class="fa fa-twitter"></i> Twitter</label>
							<input placeholder="https://www.twitter.com/" type="text">

							<label><i class="fa fa-facebook-square"></i> Facebook</label>
							<input placeholder="https://www.facebook.com/" type="text">

							<label><i class="fa fa-google-plus"></i> Google+</label>
							<input placeholder="https://www.google.com/" type="text">
						</div>
	
						<button class="button margin-top-15">Save Changes</button>

					</div>
				</div>
			</div>

			<!-- Change Password -->
			<div class="col-lg-6 col-md-12">
				<div class="dashboard-list-box margin-top-0">
					<h4 class="gray">Change Password</h4>
					<div class="dashboard-list-box-static">

						<!-- Change Password -->
						<div class="my-profile">
							<label>New Password</label>
							<%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Nouveau mot de passe (si vous souhaitez changer de mot de passe)" %>


							<label>Confirm New Password</label>
							 <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmation du mot de passe" %>

							<%= f.submit "Enregistrer", class: "button margin-top-15" %>
						</div>

					</div>
				</div>
			</div>
<% end %>

			<!-- Copyrights -->
			<div class="col-md-12">
				<div class="copyrights">© 2017 Listeo. All Rights Reserved.</div>
			</div>

		</div>

	</div>
	<!-- Content / End -->




</div>
<!-- Wrapper / End -->










<div class="row">
  <div class="col-md-3">
      <ul class="sidebar-list">
        <li class="sidebar-item">
          <%= link_to 'Modifier mon profil', edit_user_registration_path, class: 'sidebar-link-active' %>
        </li>
      </ul>
      <br>
      <%= link_to 'Voir mon profil', user_path(current_user.id), class: 'btn btn-default wide' %>
  </div>
  <div class="col-md-7 text-center">
    <div class="panel panel-default">
      <div class="panel-heading">Mon profil</div>
      <div class="panel-body">
        <div class="container">
           <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render 'shared/devise_errors' %>
    
      <div class="form-group">
        <%= f.text_field :fullname, autofocus: true, class: "form-control", placeholder: "Nom complet (prénom + nom)" %>
      </div>
    
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Adresse e-mail" %>
      </div>
      
      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <span class="btn btn-default btn-file">
              Upload ma photo
            <%= f.file_field :avatar %>
            </span>
          </div>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.text_field :phone_number, class: "form-control", placeholder: "Numéro de téléphone" %>
      </div>
      
      <div class="form-group">
        <%= f.text_area :description, rows:5, col:25, class: "form-control", placeholder: "Ma description" %>
      </div>
    
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Nouveau mot de passe (si vous souhaitez changer de mot de passe)" %>
      </div>
    
      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmation du mot de passe" %>
      </div>
    
      <div class="actions">
        <%= f.submit "Enregistrer", class: "btn btn-primary" %>
      </div>
    <% end %>
    
    <% unless current_user.confirmed_at? %>
      <br><br>
      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: {
        method: :post }) do |f| %>
        <%= f.hidden_field :email, value: current_user.email %>
        <div class="actions">
          <%= f.submit "Renvoyer un email de confirmation", class: "btn btn-primary" %>
        </div>
      <% end %>
    <% end %>
        </div>
      </div>
    </div>

    
   

  </div>
</div>
