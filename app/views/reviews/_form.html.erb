<% if user_signed_in? %>
<%= form_for([@company, @company.reviews.new]) do |f| %>
    <div id="user_stars"></div>
    <%= f.text_field :comment %>
    <%= f.hidden_field :company_id, value: @company.id %>
    <div class="actions">
        <%= f.submit %>
    </div>
    <% end %>


<% end %>


<script>
    $('#user_stars').raty({
        path: '/assets',
        scoreName: 'review[star]',
        score: 1
    });
</script>